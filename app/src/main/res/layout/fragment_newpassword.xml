<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.auth.newpassword.NewPasswordFragment">

    <ImageView
        android:id="@+id/imageViewNewPasswordLeftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/bg_icon"
        android:padding="10dp"
        android:src="@drawable/icon_left_arrow"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNewPasswordHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/inter_semibold_600"
        android:text="New Password"
        android:textColor="@color/black_20"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNewPasswordLeftArrow" />

    <TextView
        android:id="@+id/textViewNewPasswordSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/inter_regular_400"
        android:text="Please enter your data to continue"
        android:textAlignment="center"
        android:textColor="@color/gray_9E"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewPasswordHeader" />

    <TextView
        android:id="@+id/textViewNewPasswordPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_regular_400"
        android:text="Password"
        android:textColor="@color/gray_9E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/editTextNewPasswordPassword"
        app:layout_constraintTop_toBottomOf="@+id/guidelineNewPassword" />

    <EditText
        android:id="@+id/editTextNewPasswordPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/gray_9E"
        android:fontFamily="@font/inter_medium_500"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewPasswordPassword" />

    <TextView
        android:id="@+id/textViewNewPasswordConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/inter_regular_400"
        android:text="Confirm Password"
        android:textColor="@color/gray_9E"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/editTextNewPasswordPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextNewPasswordPassword" />

    <EditText
        android:id="@+id/editTextNewPasswordConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/gray_9E"
        android:fontFamily="@font/inter_medium_500"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewPasswordConfirmPassword" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonNewPasswordCreateAccount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_FA"
        android:text="Reset Password"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium_500"
        android:paddingVertical="26dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>